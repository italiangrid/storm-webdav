<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="FILE"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>/var/log/storm/webdav/storm-webdav-server-access.log</File>
    <rollingPolicy
      class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <FileNamePattern>/var/log/storm/webdav/storm-webdav-server-access.%d{yyyy-MM-dd}.log</FileNamePattern>
    </rollingPolicy>

    <encoder>
      <pattern>%h %l %u %user %date "%r" %s %b %D</pattern>
    </encoder>
  </appender>

  <appender-ref ref="FILE" />
</configuration>